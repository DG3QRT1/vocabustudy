                            circle.mdc-circular-progress__determinate-track(cx='24', cy='24', r='18', stroke-width='4')
                            circle.mdc-circular-progress__determinate-circle(cx='24', cy='24', r='18', stroke-dasharray='113.097', stroke-dashoffset='113.097', stroke-width='4')
