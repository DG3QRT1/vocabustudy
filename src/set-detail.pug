                    h3.mdc-typography--overline Set URL
                        button.mdc-icon-button.mdc-icon-button--touch.material-icons-round.btn-share(title="Share")
                            .mdc-icon-button__ripple
                            | share
                            .mdc-icon-button__touch
                    a.share-link(target="_blank" style="max-width: calc(100% - 91px);display: inline-block;word-break: break-all;")
                    button.mdc-button.btn-shorten-link(type="button" style="float: right;")
                        span.mdc-button__ripple
                        span.mdc-button__label Shorten
                    h3.mdc-typography--overline Export
                        button.mdc-icon-button.mdc-icon-button--touch.material-icons-round.btn-copy(title="Copy Terms")
