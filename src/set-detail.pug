                    button.button.button--raised(type='button')
                        span.button__ripple
                        span.button__label Check
                fieldset
                    button.button.button--outlined.button--icon-leading(data-answerindex='0')
                        span.button__ripple
                        i.material-symbols-rounded.button__icon(aria-hidden='true') filter_1
