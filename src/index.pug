extends includes/layout.pug
block variables
    - var title = "Home";
block main-stylesheet
    link(rel="stylesheet" href="css/home.scss")
block extrahead
    link(rel="preload" href="./images/hero-background.svg" as="image")
block content
    .page#login(data-nosnippet data-mode="login")
        .container
            .columns.is-multiline
                .column.is-8.is-offset-2
                    .columns
                        .column.p-6.is-hidden-touch.has-text-centered.is-relative
                            h1.title.is-3.has-text-primary Free, Fast, Simple, and Effective.
                            h1.title.is-4 That's the kind of studying you get when you join Vocabustudy.
                            br
                            img.nohuechange.is-block.mx-auto(src="./icons/icon-192.png" style="width: 8rem; height: 8rem" alt="Vocabustudy Logo")
                            p.prompt-switch-mode(style="position: absolute; bottom: 1rem; left: 50%; transform: translateX(-50%); width: 100%;")
                                span.log-in Already have an account? #[a.has-text-primary.has-text-weight-bold(role="button" tabindex="0") Log in]
                                span.sign-up Don't have an account? #[a.has-text-primary.has-text-weight-bold(role="button" tabindex="0") Sign up]
                        .column.has-text-centered.p-6
                            h1.title.is-4.form-title
                            form(novalidate)
                                .field
                                    .control
                                        input.input.is-medium(type="text" placeholder="Display Name" id="login-display-name" required)
                                .field
                                    .control
                                        input.input.is-medium(type="email" placeholder="Email" id="login-email" required)
                                .field
                                    .control
                                        input.input.is-medium(type="password" placeholder="Password" id="login-password" required)
                                .field
                                    .control
                                        input.input.is-medium(type="password" placeholder="Confirm Password" id="login-confirm-password" required)
                                .field
                                    input.is-checkradio.is-warning#login-accept-tos(type="checkbox" required)
                                    label(for="login-accept-tos") I accept the #[a.has-text-primary(href="/terms/") Terms of Service] and #[a.has-text-primary(href="/privacy/") Privacy Policy]
                                button.button.is-primary.is-medium.is-fullwidth(type="submit")
                            button.button.is-light.is-medium.is-fullwidth.mt-3.btn-continue-google(type="button")
                                span.icon.nohuechange(style="width: 24px; height: 24px;")
                                    svg(version='1.1' xmlns='http://www.w3.org/2000/svg' viewbox='0 0 48 48' height="24" width="24")
                                        g
                                            path(fill='#EA4335', d='M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z')
                                            path(fill='#4285F4', d='M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z')
                                            path(fill='#FBBC05', d='M10.53 28.59c-.48-1.45-.76-2.99-.76-4.59s.27-3.14.76-4.59l-7.98-6.19C.92 16.46 0 20.12 0 24c0 3.88.92 7.54 2.56 10.78l7.97-6.19z')
                                            path(fill='#34A853', d='M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.15 1.45-4.92 2.3-8.16 2.3-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z')
                                            path(fill='none', d='M0 0h48v48H0z')
                                span.is-hidden-mobile Continue with Google
                            br
                            small
                                em You must be at least 13 years old to use an account, or you must have permission from a parent/guardian.
                .column.is-8.is-offset-2
                    .level.mt-1.has-text-centered
