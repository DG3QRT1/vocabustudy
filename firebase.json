{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": [
    {
      "public": "dist",
      "target": "vocabustudy",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "appAssociation": "AUTO",
      "rewrites": [
        {
          "source": "/set/*/view/",
          "destination": "/set-detail.html"
        },
        {
          "source": "/timeline/*/view/",
          "destination": "/set-detail.html"
        },
        {
          "source": "/guide/*/view/",
          "destination": "/guide-detail.html"
        },
        {
          "source": "/set/*/edit/",
          "destination": "/set-editor.html"
        },
        {
          "source": "/user/*/",
          "destination": "/user-sets.html"
        },
        {
          "source": "/collection/*/",
          "destination": "/custom-collections.html"
        },
        {
          "source": "/privacy/",
          "destination": "/privacy-policy.html"
        },
        { "source": "/go/**", "dynamicLinks": true }
      ],
      "trailingSlash": true
    },
    {
      "public": "rd",
      "target": "rd"
    }
  ],
  "emulators": {
    "auth": {
      "port": 9099
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true
    }
  }
}
